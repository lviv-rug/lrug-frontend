<div class="row">
  <div class="col-xs-12 col-sm-8">
    <header class="items-header">
      <h1>Блог LRUG</h1>
    </header>

    {{#each post in model}}
      <div class="items">
        <h2>{{#link-to 'post' post classNames="items-title"}}{{post.title}}{{/link-to}}</h2>
        <div class="items-title-bottom">
          {{post.date}}, {{post.time}}&nbsp;&nbsp;&nbsp;{{post.author}}
        </div>

        <div class="items-description">
          {{post.smallDescription}}
        </div>

        {{#link-to 'post' post classNames="read-more"}}Читати далі{{/link-to}}

      </div>
    {{/each}}
  </div>
</div>
