<div class="row">
  <div class="col-xs-12 col-sm-8">
    <div class="item">
      <h1>{{position}} в {{company}}</h1>

      <div class="items-title-bottom">
        <a href="#">{{city}}</a>
        <span>{{price}} $</span>
        <span>
          {{#if jobTime}}
            full-time
          {{else}}
            part-time
          {{/if}}
        </span>
      </div>
      <hr />

      <div class="item-description">{{{description}}}</div>

      <div class="share">
        <h3 class="h3--bold">Поділитись вакансією з друзями</h3>
      </div>
      <hr />

      <div class="pagination">
        {{#if prevPage}}
          {{#link-to 'job' prevPage classNames="pagination-link" }}{{prevJob.position}} в {{prevJob.company}}{{/link-to}}
        {{/if}}

        {{#if nextPage}}
          {{#link-to 'job' nextPage classNames="pagination-link" }}{{nextJob.position}} в {{nextJob.company}}{{/link-to}}
        {{/if}}
      </div>

    </div>
  </div>

  <div class="col-xs-12 col-sm-4">
    <div class="on-email">
      <div class="on-email_label">Нові вакансії на email</div>
      <form>
        <input type="text" placeholder="ваш email">
        <button>Підписатись</button>
      </form>
    </div>

    <div class="add-job">
      {{#link-to 'create-job'}}+ Додати вакансію{{/link-to}}
    </div>
  </div>
</div>