<div class="row">
  <div class="col-xs-12 col-sm-8">
    <div class="item">
      <h1>{{title}}</h1>

      <div class="items-title-bottom">
        <a href="#">{{city}}</a>
        <span>{{price}} $</span>
        <span>
          {{#if jobTime}}
            full-time
          {{else}}
            part-time
          {{/if}}
        </span>
      </div>
      <hr />

      <div class="item-description">{{{description}}}</div>

      <div class="share">
        <h3 class="h3--bold">Поділитись вакансією з друзями</h3>
      </div>
      <hr />

      <div class="pagination">
        {{pager-navigation store=controller.store itemId=id modelName='jobs' page='job'}}
      </div>

    </div>
  </div>

  <div class="col-xs-12 col-sm-4">
    <div class="on-email">
      <div class="on-email_label">Нові вакансії на email</div>
      <form>
        <input type="text" placeholder="ваш email">
        <button>Підписатись</button>
      </form>
    </div>

    <div class="add-job">
      <a href="#">+ Додати вакансію</a>
    </div>
  </div>
</div>