<div class="row">
  <div class="col-xs-12 col-sm-8">
    <div class="item">
      <h1>{{title}}</h1>

      <div class="items-title-bottom">
        {{date}}, {{time}}&nbsp;&nbsp;&nbsp;{{author}}
      </div>
      <hr />

      <div class="item-description">{{{description}}}</p>

      <hr />

      <div class="pagination">
        {{#if prevPage}}
          {{#link-to 'post' prevPage classNames="pagination-link" }}{{prevPost.title}}{{/link-to}}
        {{/if}}

        {{#if nextPage}}
          {{#link-to 'post' nextPage classNames="pagination-link" }}{{nextPost.title}}{{/link-to}}
        {{/if}}
      </div>

    </div>
  </div>
</div>
