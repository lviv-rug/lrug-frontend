<div class="row events-page">
  <div class="col-xs-12">
    <div class="events">

      {{#events-filter store=controller.store sortEvents=sortEvents date=sortDate filteredArray=filteredArray}}
        <div class="row">
          {{#each sortEvents}}
            <div class="col-xs-12 col-sm-6 event">
                <div class="row">
                  <div class="col-xs-12 col-sm-3">
                    <div class="event--user-image">
                      {{#if imageUser}}
                        <img {{bind-attr src=imageUser}} alt="">
                      {{else}}
                        <img src='/images/useravatar.png' alt="">
                      {{/if}}
                    </div>
                  </div>
                  <div class="col-xs-12 col-sm-9">
                    <h4>
                      {{#link-to 'event' this classNames="items-title"}}{{title}}{{/link-to}}
                    </h4>
                    ({{date}}) <br />
                    <div class="event-author">{{author}}</div>
                    {{position}} &nbsp; Ð² &nbsp; {{company}}, &nbsp; {{city}}
                  </div>
                </div>

              </div>
          {{/each}}
        </div>
      {{/events-filter}}
    </div>

    <div class="events-about">
      {{partial "about"}}
    </div>

  </div>
</div>